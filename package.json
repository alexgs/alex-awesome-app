{
  "name": "phils-awesome-app",
  "version": "1.3.1",
  "description": "Phil's \"Awesome App\" starter kit for Webpack and React",
  "main": "./src/index.js",
  "author": "Phil Gates-Shannon <phil.gs@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/philgs/phils-awesome-app.git"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --colors",
    "build": "npm run build:prod",
    "build:dev": "cross-env NODE_ENV=development webpack --progress --colors",
    "build:prod": "cross-env NODE_ENV=production webpack --progress --colors"
  },
  "private": true,
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "transform-class-properties"
        ],
        "presets": [
          [
            "env",
            {
              "modules": "commonjs"
            }
          ]
        ]
      }
    },
    "plugins": [
      "transform-class-properties",
      [
        "babel-plugin-transform-react-remove-prop-types",
        {
          "removeImport": true
        }
      ]
    ],
    "presets": [
      [
        "env",
        {
          "modules": false,
          "useBuiltIns": true
        }
      ],
      "react",
      "stage-3"
    ]
  },
  "browserslist": [
    "last 4 chrome versions",
    "last 4 chromeandroid versions",
    "last 4 edge versions",
    "last 4 firefox versions",
    "last 4 ios versions",
    "last 4 safari versions"
  ],
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^8.5.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "chalk": "^2.4.1",
    "cross-env": "^5.1.6",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.9.0",
    "postcss-loader": "^2.1.5",
    "react": "^16.4.0",
    "react-dev-utils": "^5.0.1",
    "react-dom": "^16.4.0",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "~4.1.x",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "^3.1.4",
    "webpack-manifest-plugin": "^2.0.3",
    "webpack-merge": "^4.1.2"
  },
  "devDependencies": {},
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/config/test-setup.js",
    "testMatch": [
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ]
  }
}
